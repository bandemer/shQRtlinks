{% extends 'base.html.twig' %}

{% block body %}
	{% include 'navbar.html.twig' %}

	<div class="container py-5">

		<h2>Add a Link</h2>
		<div class="form-group row mb-md-4">

			{{ form_start(form) }}
			{{ form_errors(form) }}

			<div class="col-12 col-md-4 col-xl-2 mb-2">
				Kurzlink:
			</div>
			<div class="col-12 col-md-7">
				{{ form_errors(form.alias) }}
				<div class="input-group mb-2">
					<div class="input-group-prepend">
						<div class="input-group-text">https://swdd.eu/</div>
					</div>
					{{ form_widget(form.alias) }}
				</div>
			</div>
		</div>

		<div class="form-group row mb-md-4">

			<div class="col-12 col-md-4 col-xl-2 mb-2">
				Ziel-URL inkl. http(s)://
			</div>

			<div class="col-8 col-md-6 col-xl-7">

				{{ form_errors(form.url) }}
				{{ form_widget(form.url, {'attr': {'placeholder': 'https://'}}) }}

			</div>
			<div class="col-4 col-md-2 col-xl-3 pt-1">
				<button class="btn btn-sm btn-secondary mr-2" onclick="return testLinkUrl();">
					<i class="fa fa-fw fa-external-link" aria-hidden="true"></i> <span class="d-none d-lg-inline">Link testen</span>
				</button>
			</div>

		</div>

				<div class="form-group row my-4">
					<div class="col-0 col-sm-2"></div>
					<div class="col-12 col-sm-10">

						<a href="{{ url('links') }}" class="btn btn-secondary mb-3 mr-3">Abbrechen</a>





					</div>
				</div>



				{{ form_end(form) }}

			</div>
		</div>

	</div>

{% endblock %}